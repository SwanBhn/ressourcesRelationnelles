{% extends 'base.html.twig' %}

{% block title %}Ressources{% endblock %}

{% block body %}
<div class="container mt-4">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Ressources</h1>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_creer_ressource') }}" class="btn btn-success mb-3">Créer une Ressource</a>
    {% endif %}

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Dernière modification</th>
                    <th scope="col">Multimedia</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Participants</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ressource in ressources %}
                    <tr>
                        <td>{{ ressource.titre }}</td>
                        <td>{{ ressource.contenu }}</td>
                        <td>{{ ressource.dateCreation|date('Y-m-d') }}</td>
                        <td>
                            {% if ressource.multimedia %}
                                <img src="{{ ressource.multimedia }}" alt="Multimedia" class="img-fluid" style="max-width: 50px;">
                            {% else %}
                                Pas de multimedia
                            {% endif %}
                        </td>
                        <td>{{ ressource.idCategorie.nom }}</td>
                        <td>{{ ressource.idUtilisateur.nom }}</td>
                        <td>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') and (utilisateurId == ressource.idUtilisateur.id) %}
                                <form method="post" action="{{ path('app_supprimer_ressource', {'id': ressource.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ressource ?')" class="me-2">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                                <a href="{{ path('app_editer_ressource', {'id': ressource.id, 'redirect_to': 'app_ressources'}) }}" class="btn btn-warning btn-sm me-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            {% endif %}
                            <a href="{{ path('app_detailressources', {'id': ressource.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
